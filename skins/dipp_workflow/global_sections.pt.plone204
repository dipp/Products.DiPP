<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      i18n:domain="plone">

<body>

<!-- THE SECTION TABS DEFINITION -->
<div metal:define-macro="portal_tabs"
     tal:omit-tag=""
     tal:define="selected_tabs python:here.selectedTabs(template_id, here);
                 selected_portal_tab selected_tabs/portal;"
     tal:condition="portal_tabs">
    <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>

    <div id="dipp-header2">
        <div class="header">
            <div id="dipp-search" >
                <form name="searchform"
                      action="search"
                      tal:attributes="action string:${portal_url}/search" >
                    <label for="searchGadget" class="hiddenStructure" i18n:translate="text_search">Search</label>
                    <input id="searchGadget"
                           name="SearchableText"
                           type="text"
                           size="15"
                           value=""
                           alt="Search"
                           title="Search"
                           accesskey="accesskeys-search"
                           i18n:attributes="alt accesskey title"
                           tal:attributes="value request/SearchableText|nothing;
                                           tabindex tabindex/next" class="visibility:visible" />
                    <input class="searchButton"
                           type="submit"
                           value="Search"
                       accesskey="accesskeys-search"
                       tal:attributes="tabindex tabindex/next"
                           i18n:attributes="value accesskey" />
                </form>
            </div>
            <div class="left">
                <div
                    tal:define="lang request/other/LANGUAGE|nothing">
                    <ul id="portal-globalnav">
                    <tal:tabs tal:repeat="tab portal_tabs">
                        <li tal:attributes="id string:portaltab-${tab/id};
                                            class python:test(selected_portal_tab==tab['id'], 'selected', 'plain');">
                            <a href="" 
                               accesskey="accesskeys-tabs" 
                               tal:define="reiter tab/name"
                               tal:content="python: here.folder_i18n(here,lang,reiter)"
                               tal:attributes="href tab/url;"
                               i18n:translate=""
                               i18n:attributes="accesskey">
                            Tab Name
                            </a>
                        </li>
                    </tal:tabs>
                </ul>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>

