<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en-US"
      lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="fedora">

  <metal:block fill-slot="javascript_head_slot">
    <tal:block define="macro here/archetypes_custom_js/macros/javascript_head | nothing"
	       condition="macro">
      <metal:block use-macro="macro" />
    </tal:block>
  </metal:block>

  <body>

    <div metal:fill-slot="main">
      <div metal:define-macro="main"
	   tal:define="errors options/state/getErrors|nothing;
	   Iterator python:modules['Products.Archetypes'].IndexIterator;
	   tabindex python:Iterator();
	   schematas here/Schemata;
	   default_fieldset python:(not schematas or schematas.has_key('default')) and 'default' or schematas.keys()[0];
	   fieldset request/fieldset|options/fieldset|default_fieldset;
	   fieldsets python:[key for key in schematas.keys() if key != 'metadata'];
	   portal_type python:here.getPortalTypeName().lower();
	   edit_template python:'%s_edit' % portal_type;
	   edit_macros python:path('here/%s/macros|here/edit_macros/macros' % edit_template);"
	   tal:omit-tag="">

	<h1 tal:content="here/title_or_id"
	    metal:use-macro="edit_macros/header|default"/>


    <form name="fedorahierarchie_edit_form"
          method="post"
          tal:define="parentPID python:here.getParentNode().PID;
                      parentURL python:here.getParentNode().absolute_url()"
          enctype="multipart/form-data"
	      tal:attributes="action python:here.absolute_url()+'/'+template.id" >

        <fieldset>

	    <legend i18n:translate=""
                tal:content="python:(len(fieldsets) > 1 and fieldset != 'default') and fieldset or here.archetype_name" />

	    <input type="hidden" name="form.submitted" value="1" />
	    <input type="hidden"   name="isChildOf" value="" tal:attributes="value parentPID" />
	    <input type="hidden"   name="parentURL" value=""       tal:attributes="value parentURL" />

	    <!--isChildOf: <span tal:replace="parentPID"></span><br />
	    parentURL:    <span tal:replace="parentURL"></span>
        -->
           <div class="field"
                tal:condition="python:site_properties.getProperty('visible_ids', None)"
                tal:define="error errors/id | nothing;
                            id python:request.get('id', test(here.show_id(),here.getId(),''));"
                tal:attributes="class python:test(error, 'field error', 'field')">

             <label for="id" i18n:translate="label_short_name">Short Name</label>

             <div class="formHelp" i18n:translate="help_shortname">
                    Short Name is part of the item's web address.
                    For accessibility reasons, do not use spaces, upper case,
                    underscores, or special characters.
             </div>

             <div tal:content="error">Validation error output</div>

             <input type="text"
                    id="id"
                    name="id"
                    value=""
                    tal:attributes="value id"
                    />

           </div>
            <div class="field"
                tal:define="error errors/title|nothing;
                            title request/title|here/title"
                tal:attributes="class python:test(error, 'field error', 'field')"
                i18n:domain="plone">
                <label for="title" i18n:translate="label_title" >title</label>
                <span class="fieldRequired" title="Required"
                       i18n:attributes="title"
                       i18n:translate="label_required">(Required)</span>
                                                                
                <div tal:content="error">Validation error output</div>
                <input type="text"
                       name="title"
                       value=""
                       tal:attributes="value title"/>
            </div>
 
            <div class="field"
                tal:define="error errors/MetaType|nothing"
                tal:attributes="class python:test(error, 'field error', 'field')"
                i18n:domain="dipp">

                <label for="title" i18n:translate="label_title" >MetaType</label>
                <div tal:content="error">Validation error output</div>
                <select name="MetaType">
                    <option value="volume">Volume</option>
                    <option value="series">Series</option>
                    <option value="category">Category</option>
                    <option value="topic">Topic</option>
                    <option value="article">Article</option>
                    <option value="congress">Congress</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <!--
            <div class="field"
                tal:define="error errors/PID|nothing;
                            PID request/PID|here/PID"
                tal:attributes="class python:test(error, 'field error', 'field')">
                <label for="PID" >PID</label>
                <span class="fieldRequired" title="Required"
                       i18n:attributes="title"
                       i18n:translate="label_required">(Required)</span>
                <div tal:content="error">Validation error output</div>
                <div class="formHelp" i18n:translate="">
                    Persistent identifier
                </div>
                <input type="text"
                       name="PID"
                       value=""
                       tal:attributes="value PID"/>
            </div>
            -->
                <input tal:define="PID request/PID|here/PID"
                       type="hidden"
                       name="PID"
                       value=""
                       tal:attributes="value PID"/>



            <input class="context"
                   tabindex=""
                   type="submit"
                   name="form.button.Save"
                   value="Save"
                   i18n:attributes="value"
                   tal:attributes="tabindex tabindex/next;
                                   disabled python:test(isLocked, 'disabled', None);" />



            <input class="standalone"
                   tabindex=""
                   type="submit"
                   name="form.button.Cancel"
                   value="Cancel"
                   i18n:attributes="value"
                   tal:attributes="tabindex tabindex/next;" />


        </fieldset>
    </form>

      </div>
    </div>

  </body>
</html>
