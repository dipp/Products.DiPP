<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body >

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
         tal:define="articlePID  here/PID;
                     DsID        here/fulltext/DsID|nothing;
                     PID         here/fulltext/PID|nothing;
                     qdc         python:here.fedora.getQualifiedDCMetadata(articlePID);
                     lang_dict   python:here.fedora.getLanguages();
                     urn         python:qdc['identifierURN'];
                     doi         python:qdc['identifierDOI'];
                     authors     python:qdc['creatorPerson'];
                     subjects    python:qdc['subject'];
                     comment_to  here/comment_to|nothing">
                     
        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>
         
        <div tal:condition="comment_to"
             tal:define="results python:here.portal_catalog.searchResults(getPID=comment_to)">
             <p tal:repeat="result results">
                <tal:block tal:define="url result/getURL|nothing;
                                       title result/Title;
                                       author python:result.getObject().Contributors()">
                    Dieser Beitrag ist ein Kommentar zu "<a tal:attributes="href result/getURL" tal:content="title">dipp:123</a>"
                    <tal:block tal:condition="author">
                    von <span tal:replace="python:author[0]">Dow, John</span>
                    </tal:block>
                </tal:block>
             </p>
        </div>
        

        
        <div id="authorblurb">
            <h1 tal:content="python:qdc['title'][0]['value']"></h1>
            
            <ol class="authors">
            <tal:block tal:repeat="author authors" >
                <li tal:define="firstName author/firstName;
                                lastName author/lastName;
                                organization author/organization">
                    <a class="authorname"
                       tal:content="string: $firstName $lastName"
                       tal:attributes="href string:$portal_url/author?contributor=$lastName, $firstName">Max Muster</a>,
                    <span class="organization" tal:content="organization">MIT</span>
                </li>
            </tal:block>
            </ol>
            
            <tal:block tal:condition="python: abstracts[0]['lang']!=''"
                       tal:define="abstracts python:qdc['DCTermsAbstract']">
                <h2 class="abstracts" i18n:translate="abstracts" i18n:domain="dipp">Abstracts</h2>
                <script type="text/javascript" src="tabber.js">
                </script>
                <div class="tabber">
                    <tal:block tal:repeat="abstract abstracts">
                        <div class="tabbertab"
                             tal:define="lang python:abstract['lang'];
                                         title python:lang_dict[lang]"
                             tal:attributes="title python:'[' + str(title) + ']'">
                            <p class="dippAbstract" tal:content="python:abstract['value']"></p>
                        </div>
                     </tal:block>
                </div>
            </tal:block>

            <h2 class="keywords-label" i18n:translate="keywords" i18n:domain="dipp">Keywords</h2>
            
            <ul class="keywords">
                <tal:items tal:repeat="subject subjects">
                    <li tal:define="islast repeat/subject/end;
                                    subject python:subject.strip()" 
                        tal:attributes="class python:test(islast,'last')">
                        <a tal:content="subject"
                           tal:attributes="href string: $portal_url/search?Subject=$subject&portal_type=FedoraArticle">
                           key</a>
                    </li>
                </tal:items>
            </ul>
            <p class="urn" tal:content="urn">
            </p>
            

        </div>

        <div class="stx mixed" tal:define="content python:here.fedora.access(PID,DsID,Date=None);
                                           MIMEType python:content['MIMEType']"
                         tal:condition="python:DsID.startswith('DS')">
            <div tal:condition="python:content['MIMEType'] != 'text/xml' " 
                 tal:replace="structure python:content['stream']">
                Hier kommt der Inhalt hin
            </div>
            <pre tal:condition="python:content['MIMEType'] == 'text/xml' " 
                 tal:content="python:content['stream']">
                Hier kommt der Inhalt hin
            </pre>

        </div>
        <tal:block tal:define="show_recommended_citation here/portal_properties/dipp_properties/show_recommended_citation|nothing;
                         citation_format here/citation_format|here/portal_properties/dipp_properties/citation_format|nothing;
                         initials_only here/initials_only|here/portal_properties/dipp_properties/initials_only|nothing;
                         initials_period here/initials_period|here/portal_properties/dipp_properties/initials_period|nothing;
                         allow_persistent_discussion here/portal_properties/dipp_properties/allow_persistent_discussion|nothing;
                         rights python:qdc['rights'][0];
                         lang request/other/LANGUAGE|en;
                         dppl python:here.dppl(rights,lang)"
                   i18n:domain="dipp">
                         
            <div class="licence"
                 tal:condition="python:rights != 'authorcontract'">

                <h2><a name="licence" i18n:translate="licence" i18n:domain="dipp">Lizenz</a></h2>

                <p i18n:translate="licence_text" i18n:domain="dipp">
                    Jedermann darf dieses Werk unter den Bedingungen der
                    <span tal:content="python: dppl[lang]" i18n:name="rights">DPPL</span> elektronisch Ã¼bermitteln
                    und zum Download bereitstellen. Der Lizenztext ist im Internet abrufbar
                    unter der Adresse <a href="" tal:attributes="href python: dppl['url'][lang]" tal:content="python: dppl['url'][lang]" i18n:name="url">http://www.dipp.nrw.de/lizenzen/dppl/mdppl/</a>.
                </p>
            </div>
            
            <div metal:use-macro="here/citation_macro/macros/recommended_citation">
                Show a custom formatted recommended citation
            </div>
           
            <div metal:use-macro="here/supplementary_material_macro/macros/supplementary_material">
                A list of supplementary materials.
            </div>
            
            <div metal:use-macro="here/persistent_comments_macro/macros/persistent_comments">
                Comments which are treated like peer reviewed articles
            </div>
            
        </tal:block>

        <div metal:use-macro="here/document_byline/macros/byline">
          Get the byline - contains details about author and modification date.
        </div>
    </tal:main-macro>
</metal:main>
</body>
</html>

