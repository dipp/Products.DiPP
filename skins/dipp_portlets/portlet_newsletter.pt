<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>


<div metal:define-macro="portlet">
                 

    <div class="portlet" id="portlet-newsletter">
    <div class="passive">

        <h5 i18n:translate="newsletter">Newsletter</h5>

        <div class="portletBody" i18n:domain="dipp">


            <div class="portletContent odd">

                <form action="mail_formdata" method="post">
                    <input type="text" name="email" value="your@email">
                    <input type="hidden" name="subject" value="Request for subscription">
                    <input class="standalone" type="submit" name="subscribe" value="Subscribe">
                </form>
                
                
            </div>
        </div>
    </div>
    </div>

</div>

</body>

</html>
