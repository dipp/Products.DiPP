<?xml version="1.0"?>
<object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False"
   cookie_persistence="False" request_varname="plone_skin">

 <!-- This list registers the folders that are stored in the skins directory
   of your product (on the filesystem) as Filesystem Directory Views within the
   portal_skins tool, so that they become usable as skin layers.-->
 <object name="dipp_content"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_content"/>
 <object name="dipp_forms"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_forms"/>
 <object name="dipp_form_scripts"   
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_form_scripts"/>
 <object name="dipp_styles"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_styles"/>
 <object name="dipp_portlets"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_portlets"/>
 <object name="dipp_scripts"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_scripts"/>
 <object name="dipp_workflow"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_workflow"/>
 <object name="dipp_images"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/dipp_images"/>
 <object name="fedora_content"
         meta_type="Filesystem Directory View"
         directory="DiPP/skins/fedora_content"/>
         
 <skin-path name="*">
    <layer name="dipp_content" remove="True"/>
    <layer name="dipp_forms"  remove="True"/>
    <layer name="dipp_form_scripts" remove="True"/>
    <layer name="dipp_styles"  remove="True"/>
    <layer name="dipp_portlets" remove="True"/>
    <layer name="dipp_scripts"  remove="True"/>
    <layer name="dipp_workflow" remove="True"/>
    <layer name="dipp_images"  remove="True"/>
    <layer name="fedora_content"  remove="True"/>
 </skin-path>


</object>
