<p tal:replace="structure here/manage_page_header" omit-tag="">Header</p>
<h2 tal:define="manage_tabs_message options/manage_tabs_message | nothing"
    tal:replace="structure here/manage_tabs">Tabs</h2>

<h3>Configuration</h3>

<form action="manage_setFedoraSettings" tal:attributes="action python:here.absolute_url()+'/manage_setFedoraSettings'" method="POST">
    <table cellspacing="0">
        <tr class="list-header">
            <th>Field</th>
            <th>Value</th>
            <th>Description</th>
        </tr>
        <tr>
            <th>label</th>
            <td><input name="label" type="text" value="" tal:attributes="value here/label"/></td>
            <td>label of all Datastreams.</td>
        </tr>
        <tr>
            <th>PID</th>
            <td><input name="PID" type="text"  value="" tal:attributes="value here/PID"/></td>
            <td>PID of the Journal</td>
        </tr>
        <tr>
            <th>Address</th>
            <td><input name="address" type="text"  value="" tal:attributes="value here/address"/></td>
            <td>IP-Address of the server</td>
        </tr>
        <tr>
            <th>Port</th>
            <td><input name="port" type="text"  value="" tal:attributes="value here/port"/></td>
            <td>Port number</td>
        </tr>
    </table>
    <input type="submit" value="Save" />
</form>
<p tal:replace="structure here/manage_page_footer" omit-tag="">Footer</p>
