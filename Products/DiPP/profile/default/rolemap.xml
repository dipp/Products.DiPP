<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Autor"/>
    <role name="Gastherausgeber"/>
    <role name="Herausgeber"/>
    <role name="Redakteur"/>
    <role name="Peer"/>
  </roles>
  <permissions>
    <permission name="DiPP: Manage Journal"
                acquire="True">
      <role name="Herausgeber"/>
      <role name="Manager"/>
    </permission>
    <permission name="Access future portal content"
                acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Access inactive portal content"
                acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Add Documents, Images, and Files"
                acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Add Folders" acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Add portal content" acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Add portal folders" acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Copy or Move" acquire="True">
      <role name="Redakteur"/>
    </permission>
    <permission name="Fedora: Add Content" acquire="True">
      <role name="Redakteur"/>
    </permission>
    <permission name="Fedora: Edit Content" acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Fedora: View Content" acquire="True">
      <role name="Anonymous"/>
    </permission>
    <permission name="List folder contents" acquire="True">
      <role name="Autor"/>
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Manage OpenFlow" acquire="True">
      <role name="Herausgeber"/>
      <role name="Manager"/>
    </permission>
    <permission name="Manage properties" acquire="True">
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
    <permission name="Use OpenFlow" acquire="True">
      <role name="Autor"/>
      <role name="Peer"/>
      <role name="Gastherausgeber"/>
      <role name="Herausgeber"/>
      <role name="Redakteur"/>
    </permission>
  </permissions>
</rolemap>
