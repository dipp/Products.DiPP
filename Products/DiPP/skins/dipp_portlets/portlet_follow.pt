<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">

<body>


<div metal:define-macro="portlet">
                 

    <dl class="portlet"
        id="portlet-follow"
        tal:define="twitter_username here/portal_properties/dipp_properties/twitter_username|nothing;
                    portal_name here/portal_properties/dipp_properties/twitter_username|nothing">

        <dt class="portletHeader">
            <span class="portletTopLeft"></span>
            <span i18n:translate="">Follow us</span>
            <span class="portletTopRight"></span>
        </dt>

        <dd class="portletItem"
            tal:condition="twitter_username">
            <a tal:attributes="href string:https://twitter.com/$twitter_username;
                               title string:Follow $portal_name on "
               class="twitter"> Twitter</a>

        </dd>
    </dl>

</div>

</body>

</html>
