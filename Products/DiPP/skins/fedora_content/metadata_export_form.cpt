<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="dipp">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
                    tal:define="errors options/state/getErrors;">

        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>
        
        <h1 class="documentFirstHeading"
            i18n:translate=""
            i18n:domain="dipp">
          Metadata Export
        </h1>
        
        <div class="documentByLine">
            <a href="#"
               i18n:translate="back_to_article"
               i18n:domain="dipp"
               tal:attributes="href string:${here/absolute_url};">
               back to the article</a>
        </div>


        <tal:block tal:define="articlePID here/PID;
                               issn here/issn|here/portal_properties/metadata_properties/issn|nothing;
                               publisher here/portal_properties/metadata_properties/publisher|nothing;
                               dc_tool here/portal_doiregistry;
                               datacite_xml python:here.bibtool.datacite_xml(articlePID,issn=issn,publisher=publisher,pdf=here.getFulltextPdf());
                               doaj_xml python:here.bibtool.doaj_xml(articlePID,issn=issn,publisher=publisher,pdf=here.getFulltextPdf())">
            <h2>DataCite</h2>
              <form name="metadata_export_form"
                    action="metadata_export_form"
                    method="post"
                    enctype="multipart/form-data"
                    tal:attributes="action string:$here_url/$template_id">
              <input type="hidden" name="form.submitted" value="1" />

              <textarea name=metadata tal:content="datacite_xml" />
			     <input type="submit" />      
            </form>
            
            <div class="portalMessage" tal:condition="not: here/getDOI">
                <strong>Warning!</strong> The metadata of this article to not contains a DOI. You can no submit this article to datacite. </div>
            <pre tal:content="datacite_xml"> </pre> 
            <a tal:attributes="href string:${here/absolute_url}/doi">Download</a>
            
            <h2>DOAJ</h2>
            <pre tal:content="doaj_xml"> </pre> 
            <a tal:attributes="href string:${here/absolute_url}/doaj">Download</a>
        </tal:block>
    </tal:main-macro>
</metal:main>

</body>
</html>
